<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fdfcfb;
            font-family: 'Arial', sans-serif;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        h1 {
            color: black;
        }

        .scrollable-container {
            max-height: 100vh;
            overflow-y: auto;
            padding: 20px;
        }

        .form-container {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: bold;
            color: #7e3b51;
        }

        .btn-primary {
            background-color: #4caf50;
            border-color: #4caf50;
        }

        .btn-primary:hover {
            background-color: #3b8b40;
        }

        .btn-secondary {
            background-color: #7e3b51;
            border-color: #7e3b51;
            color: #ffffff;
        }

        .btn-secondary:hover {
            background-color: #662d41;
        }

        .btn-back {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 100;
        }

        .img-preview-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
        }

        .img-container {
            text-align: center;
        }

        .img-thumbnail {
            width: 100%;
            height: auto;
            border-radius: 4px;
            margin-bottom: 5px;
        }

        .btn-remove {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #ffffff;
        }

        .btn-remove:hover {
            background-color: #b02a37;
        }

        .add-image {
            cursor: pointer;
        }

        /* Cropper Modal Styles */
        #cropperModal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            max-width: 90%;
            max-height: 90%;
        }

        #cropperImage {
            max-width: 100%;
            max-height: 70vh;
        }

        .modal-buttons {
            margin-top: 15px;
            text-align: right;
        }

        .modal-buttons button {
            margin-left: 10px;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 24px;
            }

            .btn-back {
                position: static;
                float: right;
                margin-bottom: 10px;
            }

            .img-preview-container {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
<%- include("../../views/partials/admin/header") %>
<header>
    <a href="/admin/productview" class="btn btn-secondary btn-back">Back to Product Page</a>
</header>

<div class="scrollable-container">
    <div class="container mt-5">
        <h1 class="mb-4">Edit Product</h1>
        <div class="form-container">
            <form action="/admin/editProduct/<%= product._id %>" method="POST" enctype="multipart/form-data" id="editProductForm">
                <div class="row">
                    <!-- Left Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="productName" class="form-label">Product Name</label>
                            <input type="text" id="productName" name="productName" class="form-control" 
                                   value="<%= product.productName %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea id="description" name="description" class="form-control" rows="3" required>
                                <%= product.description %>
                            </textarea>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select id="category" name="category" class="form-control" required>
                                <% cat.forEach(category => { %>
                                    <option value="<%= category._id %>" 
                                            <%= product.category.equals(category._id) ? 'selected' : '' %> >
                                        <%= category.name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Quantity" class="form-label">Quantity</label>
                            <input type="number" id="Quantity" name="Quantity" class="form-control" 
                                   value="<%= product.Quantity %>" required>
                        </div>
                    </div>

                    <!-- Right Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="publication" class="form-label">Publication</label>
                            <select id="publication" name="publication" required>
                                <option value="">Select a Publication</option>
                                <% for (let i = 0; i < publication.length; i++) { %>
                                    <option value="<%= publication[i].id %>" <%= product.publication.equals(publication[i].id) ? 'selected' : '' %> >
                                        <%= publication[i].name %>
                                    </option>
                                <% } %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="regularPrice" class="form-label">Regular Price</label>
                            <input type="number" id="regularPrice" name="regularPrice" class="form-control" 
                                   value="<%= product.regularPrice %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="salePrice" class="form-label">Sale Price</label>
                            <input type="number" id="salePrice" name="salePrice" class="form-control" 
                                   value="<%= product.salePrice %>">
                        </div>

                        <div class="mb-3">
                            <label for="isListed" class="form-label">Is Listed</label>
                            <select id="isListed" name="isListed" class="form-control">
                                <option value="true" <%= product.isListed ? 'selected' : '' %>>Yes</option>
                                <option value="false" <%= !product.isListed ? 'selected' : '' %>>No</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Product Images Section -->
                <div class="mb-3">
                    <label class="form-label">Product Images</label>
                    <div class="img-preview-container" id="imagePreviewContainer">
                        <% product.productImage.forEach((image, index) => { %>
                            <div class="img-container" id="img-container-<%= index %>">
                                <img src="/uploads/<%= image %>" alt="Product Image <%= index + 1 %>" class="img-thumbnail">
                                <input type="hidden" name="existingImages[]" value="<%= image %>">
                                <button type="button" class="btn btn-remove btn-sm" onclick="removeImage('<%= index %>', '<%= image %>')">Remove</button>
                            </div>
                        <% }); %>
                        <% for (let i = product.productImage.length; i < 4; i++) { %>
                            <div class="img-container" id="img-container-<%= i %>">
                                <div class="img-thumbnail add-image" onclick="triggerFileInput('<%= i %>')" style="background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; height: 150px;">
                                    <span style="color: #ccc;">Add Image</span>
                                </div>
                                <input type="file" id="fileInput-<%= i %>" name="images" accept="image/*" class="form-control file-input" style="display: none;" onchange="previewImage(this, '<%= i %>')">
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Submit and Cancel Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Update Product</button>
                    <a href="/admin/productview" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Cropper Modal -->
<div id="cropperModal">
    <div class="modal-content">
        <img id="cropperImage" alt="Crop Image">
        <div class="modal-buttons">
            <button class="btn btn-primary" id="cropSaveBtn">Save</button>
            <button class="btn btn-secondary" id="cropCancelBtn">Cancel</button>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
<script>
    console.log('Initial product images:', <%- JSON.stringify(product.productImage) %>);

    let cropper = null;
    let currentImageIndex = null;

    function triggerFileInput(index) {
        const fileInput = document.getElementById(`fileInput-${index}`);
        if (fileInput) {
            fileInput.click();
        }
    }

    function previewImage(input, index) {
        if (input.files && input.files[0]) {
            const file = input.files[0];
            const reader = new FileReader();
            
            reader.onload = function(e) {
                currentImageIndex = index;
                const cropperImage = document.getElementById('cropperImage');
                cropperImage.src = e.target.result;
                openCropperModal();
            };
            
            reader.readAsDataURL(file);
        }
    }

    function openCropperModal() {
        const modal = document.getElementById('cropperModal');
        modal.style.display = 'flex';
        
        if (cropper) {
            cropper.destroy();
        }
        
        cropper = new Cropper(document.getElementById('cropperImage'), {
            aspectRatio: 4/5,
            viewMode: 1,
            autoCropArea: 1,
        });
    }

    function closeCropperModal() {
        const modal = document.getElementById('cropperModal');
        modal.style.display = 'none';
        if (cropper) {
            cropper.destroy();
            cropper = null;
        }
    }

    document.getElementById('cropSaveBtn').addEventListener('click', () => {
        if (!cropper) return;

        const canvas = cropper.getCroppedCanvas({
            width: 400,
            height: 500
        });

        const croppedImageUrl = canvas.toDataURL('image/jpeg');
        const container = document.getElementById(`img-container-${currentImageIndex}`);
        
        // Update the preview
        container.innerHTML = `
            <img src="${croppedImageUrl}" alt="Product Image" class="img-thumbnail">
            <button type="button" class="btn btn-remove btn-sm" onclick="removeImage('${currentImageIndex}')">Remove</button>
            <input type="file" id="fileInput-${currentImageIndex}" name="images" accept="image/*" class="form-control file-input" style="display: none;" onchange="previewImage(this, '${currentImageIndex}')">
        `;

        // Convert canvas to blob and update the file input
        canvas.toBlob((blob) => {
            const file = new File([blob], `cropped-image-${Date.now()}.jpg`, { 
                type: 'image/jpeg',
                lastModified: Date.now()
            });
            
            // Create a new FileList containing the cropped image
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);

            const fileInput = document.getElementById(`fileInput-${currentImageIndex}`);
            fileInput.files = dataTransfer.files;
        }, 'image/jpeg', 0.95); // Added quality parameter for better compression

        closeCropperModal();
    });

    document.getElementById('cropCancelBtn').addEventListener('click', closeCropperModal);

    function removeImage(index, existingImage) {
        const container = document.getElementById(`img-container-${index}`);
        if (existingImage) {
            // Add hidden input to track removed images
            const removedInput = document.createElement('input');
            removedInput.type = 'hidden';
            removedInput.name = 'removeImages[]';
            removedInput.value = existingImage;
            container.appendChild(removedInput);
        }
        
        // Reset the container to "Add Image" state
        container.innerHTML = `
            <div class="img-thumbnail add-image" onclick="triggerFileInput('${index}')" style="background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; height: 150px;">
                <span style="color: #ccc;">Add Image</span>
            </div>
            <input type="file" id="fileInput-${index}" name="images" accept="image/*" class="form-control file-input" style="display: none;" onchange="previewImage(this, '${index}')">
            ${existingImage ? `<input type="hidden" name="removeImages[]" value="${existingImage}">` : ''}
        `;
    }

    // Add form submission handler
    document.getElementById('editProductForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Create FormData object
        const formData = new FormData(this);
        
        // Log form data for debugging
        for (let pair of formData.entries()) {
            console.log(pair[0], pair[1]);
        }

        // Submit the form
        this.submit();
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%- include("../../views/partials/admin/footer") %>
</body>
</html>