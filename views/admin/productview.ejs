<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
     
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        
         body {
            background-color: #fdfcfb; 
            font-family: 'Arial', sans-serif;
        }

        h1 {
            color: black
        }
        header, footer {
            background-color: #2b3e50; 
            color: #fdfcfb; 
            padding: 10px 20px;
        }


        
        .table {
            background-color: #ffffff;
            overflow: hidden;
        }

        .table-d {
            background-color: #7e3b51;
            color: #ffffff;
        }

        .table-hover tbody tr:hover {
            background-color: #f4f8fb; 
        }

        th, td {
            vertical-align: middle;
            text-align: center;
        }

        /* Buttons Styling */
        .btn-primary {
            background-color: #4caf50; 
            border-color: #4caf50;
        }

        .btn-primary:hover {
            background-color: #3b8b40;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

       
        header, footer {
            background-color: #7e3b51;
            color: #ffffff;
            padding: 10px 20px;
        }

        header a, footer a {
            color: #f7ca18;
            text-decoration: none;
            font-weight: bold;
        }

        header a:hover, footer a:hover {
            text-decoration: underline;
        }

        
        @media (max-width: 768px) {
            h1 {
                font-size: 24px;
            }

            .table {
                font-size: 14px;
            }
        }
        .btn-success {
    background-color: #4caf50; 
    border-color: #4caf50;
}

.btn-warning {
    background-color: #f39c12; 
    border-color: #f39c12;
}

.btn-success:hover {
    background-color: #3b8b40;
}

.btn-warning:hover {
    background-color: #e67e22;
}
.pagination .page-link {
    border-radius: 4px;
    margin: 0 2px;
    border: none;
    color: white;
    transition: background-color 0.3s ease;
}

.pagination .page-link:hover {
    background-color: #c2185b;
    color: white;
}

.pagination .page-item.active .page-link {
    background-color: #e91e63;
    border-color: #e91e63;
    color: white;
}

.pagination .page-item.disabled .page-link {
    background-color: #f8d7da;
    color: #721c24;
    border: none;
}
.btn-primary {
            background-color: #e91e63 !important;
            border-color: #e91e63 !important;
        }
        .active>.page-link {
            background-color: #763b51 !important;
            border-color : #763b51 !important;
        }
        .btn-primary:hover {
            background-color: #6c334b;
        }


    </style>
</head>
<body>
<%- include("../../views/partials/admin/header") %>
    <div class="container mt-5">
        <h1 class="mb-4">Product Listing</h1>
        <table class="table table-bordered table-hover">
            <thead class="" style="background-color: #7e3b51 ;">
                <tr>
                    <th>No.</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Publication</th>
                    <th>Category</th>
                    <th>Regular Price</th>
                    <th>Sale Price</th>
                    <th>Offer</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= product.productName %></td>
                        <td><%= product.description %></td>
                        <td><%= product.publication.name %></td>
                        <td><%= product.category ? product.category.name : 'Uncategorized' %></td>
                        <td><%= product.regularPrice %></td>
                        <td><%= product.salePrice %></td>
                        <td><%= (((product.regularPrice - product.salePrice) / product.regularPrice) * 100).toFixed(0) %>%</td>
                        <td><%= product.Quantity %></td>
                        <td><%= product.status %></td>
                        <td><%= product.status === 'Unblock' ? 'Listed' : 'Unlisted' %></td>
                        <td>
                            <a href="/admin/editProduct/<%= product._id %>" class="btn btn-sm btn-primary">Edit</a>
                            <button class="btn btn-sm <%= product.status === 'Unblock' ? 'btn-success' : 'btn-warning' %>" 
                                onclick="toggleProductStatus('<%= product._id %>', '<%= product.status %>')">
                                <%= product.status === 'Unblock' ? 'Block' : 'Unblock' %>
                            </button>
                        </td>
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>
 <!-- Pagination Controls -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        <% } %>
    </ul>
</nav>
<%- include("../../views/partials/admin/footer") %>
<script>
    async function toggleProductStatus(productId, currentStatus) {
        try {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: `You want to ${currentStatus === 'Unblock' ? 'Block' : 'Unblock'} this product?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Update it!'
            });

            if (!result.isConfirmed) {
                return;
            }

            const response = await fetch(`/admin/products/toggle-status/${productId}`, {
                method: 'PATCH'
            });

            const data = await response.json();
            
            if (response.ok) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: data.message,
                    showConfirmButton: false,
                    timer: 1500
                });
                // setTimeout(() => {
                //     location.reload();
                // }, 1500);
                location.reload();
            } else {
                await Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: data.message || 'Failed to update product status',
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        } catch (error) {
            console.error('Error toggling product status:', error);
            await Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'An error occurred while updating the product status.',
                showConfirmButton: false,
                timer: 2000
            });
        }
    }
</script>


</body>
</html> 